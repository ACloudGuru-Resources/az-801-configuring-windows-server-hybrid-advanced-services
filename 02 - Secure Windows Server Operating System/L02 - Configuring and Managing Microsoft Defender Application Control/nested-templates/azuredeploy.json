{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {},
  "functions": [],
  "variables": {
    "location": "[resourceGroup().location]",
    "vnetName": "1awesome-VirtualNetwork",
    "subnetName": "1awesome-VirtualNetwork-Subnet",
    "nsgName": "1awesome-nsg",
    "bastionName": "1awesome-bastion"
  },
  "resources": [
    {
      "name": "networkDeployment",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {},
        "variables": {
          "location": "[variables('location')]",
          "vnetName": "[variables('vnetName')]",
          "subnetName": "[variables('subnetName')]",
          "nsgName": "[variables('nsgName')]"
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {},
          "variables": {
            "location": "[variables('location')]",
            "vnetName": "[variables('vnetName')]",
            "subnetName": "[variables('subnetName')]",
            "nsgName": "[variables('nsgName')]"
          },
          "resources": [
            {
              "name": "[variables('nsgName')]",
              "type": "Microsoft.Network/networkSecurityGroups",
              "apiVersion": "2020-11-01",
              "location": "[variables('location')]",
              "properties": {
                "securityRules": [
                  {
                    "name": "nsgRule1",
                    "properties": {
                      "description": "description",
                      "protocol": "Tcp",
                      "sourcePortRange": "*",
                      "destinationPortRange": "3389",
                      "sourceAddressPrefix": "*",
                      "destinationAddressPrefix": "*",
                      "access": "Allow",
                      "priority": 100,
                      "direction": "Inbound"
                    }
                  }
                ]
              }
            },
            {
              "name": "[variables('vnetName')]",
              "type": "Microsoft.Network/virtualNetworks",
              "apiVersion": "2020-11-01",
              "location": "[variables('location')]",
              "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
              ],
              "tags": {},
              "properties": {
                "addressSpace": {
                  "addressPrefixes": ["10.0.0.0/16"]
                },
                "subnets": [
                  {
                    "name": "[variables('subnetName')]",
                    "properties": {
                      "addressPrefix": "10.0.0.0/24",
                      "networkSecurityGroup": {
                        "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
                      }
                    }
                  }
                ]
              }
            }
          ],
          "outputs": {
            "vnetId": {
              "type": "string",
              "value": "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]"
            }
          }
        }
      }
    },
    {
      "name": "bastionDeployment",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {},
        "variables": {
          "bastionName": "[variables('bastionName')]",
          "location": "[variables('location')]"
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {},
          "variables": {
            "bastionName": "[variables('bastionName')]",
            "location": "[variables('location')]"
          },
          "resources": [],
          "outputs": {}
        }
      }
    }
  ],
  "outputs": {
      "vnetId": {
              "type": "string",
              "value": "[reference('networkDeployment').outputs.vnetId.value]"
            }
  }
}
